version: '3.8'

services:
  frontend:
    build:
      context: ./client
      dockerfile: Dockerfile
    ports:
      - "5173:5173"
    volumes:
      - ./client:/app
      - /app/node_modules
    environment:
      - VITE_API_URL=http://localhost:8000
      - VITE_SANDBOX_URL=http://localhost:8080
      - REACT_APP_CLOUDFLARE_TOKEN=${CLOUDFLARE_API_KEY}
      - REACT_APP_OPENAI_API_KEY=${OPENAI_API_KEY}
    depends_on:
      - backend
      - sandbox
    restart: unless-stopped

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    volumes:
      - ./backend:/app
    environment:
      - SANDBOX_URL=http://sandbox:8080
      - PORT=8000
      - CLOUDFLARE_ACCOUNT_ID=${CLOUDFLARE_ACCOUNT_ID}
      - CLOUDFLARE_GATEWAY_ID=${CLOUDFLARE_GATEWAY_ID}
      - CLOUDFLARE_API_KEY=${CLOUDFLARE_API_KEY}
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - GOOGLE_AI_API_KEY=${GOOGLE_AI_API_KEY}
      - ELEVENLABS_API_KEY=${ELEVENLABS_API_KEY}
      - FAL_AI_API_KEY=${FAL_AI_API_KEY}
      - CARTESIA_API_KEY=${CARTESIA_API_KEY}
    restart: unless-stopped

  sandbox:
    build:
      context: ./sandbox
      dockerfile: Dockerfile
    ports:
      - "8080:8080"
      - "5900:5900"
      - "9222:9222"
    volumes:
      - ./sandbox:/app
      - ./sandbox/workspace:/app/workspace
    environment:
      - PORT=8080
    restart: unless-stopped

  mockserver:
    build:
      context: ./mockserver
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    volumes:
      - ./mockserver:/app
      - /app/node_modules
    environment:
      - PORT=3000
    restart: unless-stopped